{
  "manifest_version": 3,
  "name": "Math Addict",
  "version": "0.0.2",
  "description": "A basic demo of what MathAddict will be able to do through a Unity WebGL Game!",

  "icons": {
    "32": "WaveTempIcon.png"
  },

  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mathacademy.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://mathacademy.com/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["GameBuild/**", "src/unityRelay.js", "EYES.png"],
      "matches": ["<all_urls>"]
    }
  ]
}